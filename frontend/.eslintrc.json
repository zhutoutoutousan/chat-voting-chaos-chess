{
  "extends": "next/core-web-vitals",
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "globals": {
    "RequestInit": "readonly"
  },
  "rules": {
    "no-unused-vars": ["error", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_",
      "ignoreRestSiblings": true,
      "vars": "all",
      "args": "after-used"
    }],
    "@typescript-eslint/no-unused-vars": ["error", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_",
      "ignoreRestSiblings": true,
      "vars": "all",
      "args": "after-used"
    }]
  },
  "overrides": [
    {
      "files": ["**/*.types.ts"],
      "rules": {
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "off"
      }
    }
  ]
}
