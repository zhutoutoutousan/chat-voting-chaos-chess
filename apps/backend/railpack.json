{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "22"
  },
  "steps": {
    "install": {
      "commands": [
        { "cmd": "sh -c 'cd ../.. && corepack enable && corepack prepare --activate'", "customName": "Setup pnpm via corepack" },
        { "cmd": "sh -c 'cd ../.. && pnpm install'", "customName": "Install dependencies" },
        { "cmd": "sh -c 'cd ../.. && pnpm db:generate'", "customName": "Generate Prisma client" }
      ]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": [
        { "cmd": "sh -c 'cd ../.. && pnpm --filter @chaos-chess/shared build'", "customName": "Build shared package" },
        { "cmd": "sh -c 'cd ../.. && pnpm --filter @chaos-chess/backend build'", "customName": "Build backend with pnpm" }
      ]
    }
  },
  "deploy": {
    "base": {
      "image": "ghcr.io/railwayapp/railpack-runtime:latest"
    },
    "inputs": [
      {
        "step": "build",
        "include": ["apps/backend/dist", "apps/backend/node_modules", "apps/backend/package.json"]
      }
    ],
    "startCommand": "node apps/backend/dist/main.js"
  }
}
