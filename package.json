{
  "name": "chat-voting-chaos-chess",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "pnpm build:packages && pnpm --filter @chaos-chess/frontend dev",
    "dev:backend": "pnpm build:packages && pnpm --filter @chaos-chess/backend dev",
    "build:packages": "pnpm db:generate && pnpm --filter @chaos-chess/shared build",
    "build:frontend": "pnpm build:packages && pnpm --filter @chaos-chess/frontend build",
    "build:backend": "pnpm build:packages && pnpm --filter @chaos-chess/backend build",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "db:generate": "pnpm --filter @chaos-chess/prisma generate",
    "db:migrate": "pnpm --filter @chaos-chess/prisma migrate dev",
    "db:migrate:deploy": "pnpm --filter @chaos-chess/prisma migrate deploy",
    "db:reset": "cd packages/prisma && powershell -ExecutionPolicy Bypass -File reset-db.ps1",
    "db:setup": "cd packages/prisma && powershell -ExecutionPolicy Bypass -File setup-db.ps1",
    "db:studio": "pnpm --filter @chaos-chess/prisma studio"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": "22.x",
    "pnpm": ">=6.0.0"
  },
  "packageManager": "pnpm@8.15.1"
}
