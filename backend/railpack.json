{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "22"
  },
  "steps": {
    "install": {
      "commands": [
        { "cmd": "npm install -g pnpm", "customName": "Install pnpm" },
        { "cmd": "pnpm install", "customName": "Install dependencies" },
        { "cmd": "pnpm prisma:generate", "customName": "Generate Prisma client" }
      ]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": [
        { "cmd": "pnpm build", "customName": "Build backend" }
      ]
    }
  },
  "deploy": {
    "base": {
      "image": "ghcr.io/railwayapp/railpack-runtime:latest"
    },
    "inputs": [
      {
        "step": "build",
        "include": ["dist", "node_modules", "package.json"]
      }
    ],
    "startCommand": "node dist/main.js"
  }
}
